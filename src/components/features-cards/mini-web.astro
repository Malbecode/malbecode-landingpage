---
import BgSvg from "@/components/features-cards/bg-svg.astro";
---

<BgSvg />

{/* container */}
<div
  class="absolute right-4 bottom-0 h-52 w-64 overflow-hidden rounded-t-md border border-b-0 border-zinc-600 bg-[#010100] shadow-2xl shadow-zinc-800 xl:w-72"
>
  {/* window header */}
  <div
    class="flex h-6 w-full items-center gap-1 border-b border-zinc-700 bg-[#111111] px-2"
  >
    {/* three circles */}
    <div class="size-2 rounded-full border-2 border-zinc-700"></div>
    <div class="size-2 rounded-full border-2 border-zinc-700"></div>
    <div class="size-2 rounded-full border-2 border-zinc-700"></div>
  </div>

  {/* main */}
  <div class="grid grid-cols-[auto_1fr] gap-6 p-4">
    {/* left section */}
    <div class="flex h-20 w-20 flex-col gap-4">
      {/* logo */}
      <div
        class="mini-web-logo flex aspect-square h-auto w-1/2 items-center justify-center rounded border border-zinc-700 blur-[1px]"
      >
        <div class="h-1/2 w-1/2 rounded-full bg-[#333333]"></div>
      </div>

      {/* text lines */}
      <div class="space-y-1">
        <div class="h-2 w-full rounded-md bg-[#333333]"></div>
        <div class="h-2 w-1/3 rounded-md bg-[#111111]"></div>
        <div class="h-2 w-1/2 rounded-md bg-[#1f1f1f]"></div>
        <div class="h-2 w-full rounded-md bg-[#111111]"></div>
      </div>
    </div>

    {/* right section */}
    <div class="h-full w-full space-y-4">
      {/* text-lines */}
      <div class="flex w-full gap-2">
        <div class="h-1 w-8 rounded-md bg-[#333333]"></div>
        <div class="h-1 w-full rounded-md bg-[#111111]"></div>
      </div>

      {/* columns */}
      <div class="flex gap-2">
        {/* left column */}
        <div class="flex w-full flex-col gap-2">
          <div
            class="mini-web-left-col-card h-20 w-full rounded outline-1 outline-zinc-700 blur-[1px]"
          >
          </div>
          <div
            class="mini-web-left-col-card h-20 w-full rounded outline-1 outline-zinc-700 blur-[1px]"
          >
          </div>
          <div
            class="mini-web-left-col-card h-20 w-full rounded outline-1 outline-zinc-700 blur-[1px]"
          >
          </div>
        </div>

        {/* right column */}
        <div class="flex w-full flex-col gap-2">
          <div
            class="mini-web-right-col-card h-12 w-full rounded outline-1 outline-zinc-700 blur-[1px]"
          >
          </div>
          <div
            class="mini-web-right-col-card h-12 w-full rounded outline-1 outline-zinc-700 blur-[1px]"
          >
          </div>
          <div
            class="mini-web-right-col-card h-12 w-full rounded outline-1 outline-zinc-700 blur-[1px]"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
